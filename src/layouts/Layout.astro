---
import "@fontsource/cardo";
import "@fontsource/david-libre";
import "../styles/global.css";
import { MAPKIT_TOKEN } from "astro:env/server";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <script
      is:inline
      src="https://cdn.apple-mapkit.com/mk/5.x.x/mapkit.core.js"
      crossorigin="anonymous"
      async
      data-callback="initMapKit"
      data-libraries="map,services,user-location,annotations,geojson,overlays"
      data-token={MAPKIT_TOKEN}></script>
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-orange-50 text-gray-800 h-full">
    <slot />
  </body>
</html>
